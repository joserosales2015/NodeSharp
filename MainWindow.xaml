<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NodeSharp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NodeSharp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    Title="NodeSharp">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="MainGrid"
		Loaded="MainGrid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
			<Canvas 
				Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch">
				<Rectangle Fill="Red" Width="30" Height="30" Canvas.Left="0" Canvas.Top="0" Canvas.ZIndex="0" />
                <Rectangle Fill="Blue" Width="30" Height="30" Canvas.Left="20" Canvas.Top="20" Canvas.ZIndex="1" />
                <Rectangle Fill="Green" Width="30" Height="30" Canvas.Left="40" Canvas.Top="40" Canvas.ZIndex="2" />
                <Rectangle Fill="Yellow" Width="30" Height="30" Canvas.Left="60" Canvas.Top="60" Canvas.ZIndex="3" />
            </Canvas>
        </Grid>

        <controls:GridSplitter
			Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
			Grid.Column="1"
            HorizontalAlignment="Center"
			ResizeBehavior="BasedOnAlignment"
            VerticalAlignment="Stretch"
			Width="8"/>

        <Grid Grid.Column="2">
			<StackPanel
				Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                BorderBrush="#404040"
				BorderThickness="1"
				HorizontalAlignment="Stretch"
				Orientation="Vertical"
                Padding="4,4,4,4"
                Spacing="8">
				<TextBox x:Name="TxtNombreNodo"
						 AutomationProperties.Name="simple TextBox"
						 FontWeight="Bold"
						 Header="Nodo"
						 Margin="3,0,3,0"
						 MaxLength="24"
                         PlaceholderForeground="Gray"
						 PlaceholderText="[Nombre del nodo]">
				</TextBox>
                <TextBox x:Name="TxtDescripcionNodo"
						 AutomationProperties.Name="simple TextBox"
                         FontSize="11"
						 Header="Descripción"
						 IsSpellCheckEnabled="True"
						 LostFocus="TxtDescripcionNodo_LostFocus"
						 Margin="3,0,3,0"
						 MaxLength="50"
                         PlaceholderForeground="Gray"
						 PlaceholderText="[Descripción y detalle]"
                         SelectionHighlightColor="Green">
                         <TextBox.HeaderTemplate>
							 <DataTemplate>
								 <TextBlock
									 FontSize="14"
									 Text="{Binding}"/>
                                </DataTemplate>
                         </TextBox.HeaderTemplate>
                </TextBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
